<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/panel_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_bottom_height"
        android:background="@color/gray_light_back"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/jizhong_magintop_text_mobile"
            android:background="@drawable/bg_common_white"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ic_ls_sousuo_icon"
                android:drawablePadding="@dimen/upload_marginLeft_small"
                android:paddingLeft="@dimen/upload_marginLeft_small"
                android:paddingRight="@dimen/comment_upload_marginright"
                android:textColor="@color/gray_primary_dark"
                android:background="@null"
                android:textSize="14sp"
                android:hint="@string/search_file_resume"
                tools:ignore="LabelFor,TextFields" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_quit"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/jizhong_magintop_text_mobile"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical|right"
            android:text="@string/exit"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_login"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_show_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/show_text_write"
            android:background="@color/gray_prime"
            android:paddingLeft="@dimen/jizhong_magintop_text_mobile"
            android:textColor="@color/holo_gray"
            android:gravity="center_vertical"
            tools:ignore="RtlSymmetry" />

        <ListView
            android:id="@+id/lv_filelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>