<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_small"
    android:layout_marginRight="@dimen/activity_horizontal_small"
    android:paddingTop="@dimen/activity_horizontal_small"
    android:paddingBottom="@dimen/activity_horizontal_small"
    android:background="@drawable/bg_list_click_white"
    android:layout_height="wrap_content">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/iv_switchfile_image"
        android:layout_width="@dimen/baiban_switch_pre_w"
        android:layout_height="@dimen/baiban_switch_pre_h"
        android:layout_margin="@dimen/activity_horizontal_small"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_switchfile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_small"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/style_btn_text_size"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>