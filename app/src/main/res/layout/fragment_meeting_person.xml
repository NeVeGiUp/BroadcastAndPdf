<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itc.suppaperless.meetingmodule.fragment.MeetingPersonFragment"
    android:orientation="vertical"
    android:background="@drawable/bg_hyxx_info">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <RadioButton
            android:id="@+id/rb_person"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_meetingperson"
            android:checked="true"
            android:button="@null"
            android:text="参会名单"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/cl_person"/>
        <RadioButton
            android:id="@+id/rb_zuowei"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_meetingperson"
            android:checked="false"
            android:button="@null"
            android:layout_marginLeft="20dp"
            android:text="座位表"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/cl_person"/>
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_bg_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_person_biaoti"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/iv_personal_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ico_me_n"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_person_num"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="序号"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_common" />
        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_common" />
        <TextView
            android:id="@+id/tv_person_role"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="会议角色"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_common"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_person_unit"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sign_person_unit"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_common"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_person_department"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sign_person_unit"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_common"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_person_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sign_person_position"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_common"
            android:gravity="center"/>
    </LinearLayout>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/rv_person"
       android:layout_margin="@dimen/dp_10"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v7.widget.RecyclerView>

</LinearLayout>
