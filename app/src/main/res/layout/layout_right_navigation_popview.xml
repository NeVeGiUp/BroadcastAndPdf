<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_win" android:orientation="vertical"
    android:background="#00000000"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#161727">

        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_speaker"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/but_sqfy_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_speaker"
                app:layout_constraintBottom_toBottomOf="@+id/iv_speaker"
                android:textColor="@color/white"
                android:text="@string/menu_zhujiang"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_track_speaker"
                android:layout_marginTop="@dimen/space_common"
                app:layout_constraintTop_toBottomOf="@+id/tv_speaker"
                android:src="@mipmap/but_gzzj_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_track_speaker"
                app:layout_constraintBottom_toBottomOf="@+id/iv_track_speaker"
                android:textColor="@color/white"
                android:text="@string/menu_genzong"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_handwritten_comment"
                android:layout_marginTop="@dimen/space_common"
                app:layout_constraintTop_toBottomOf="@+id/tv_track_speaker"
                android:src="@mipmap/but_sxpz_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_handwritten_comment"
                app:layout_constraintBottom_toBottomOf="@+id/iv_handwritten_comment"
                android:textColor="@color/white"
                android:text="@string/menu_pizhu"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_screen_broadcast"
                android:layout_marginTop="@dimen/space_common"
                app:layout_constraintTop_toBottomOf="@+id/tv_handwritten_comment"
                android:src="@mipmap/but_pmgb_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_screen_broadcast"
                app:layout_constraintBottom_toBottomOf="@+id/iv_screen_broadcast"
                android:textColor="@color/white"
                android:text="@string/menu_screen"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</LinearLayout>