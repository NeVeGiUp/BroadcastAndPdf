<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp">
    <TextView
        android:id="@+id/tv_switch_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_conference"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="@dimen/space_common_large_only"
        android:paddingLeft="@dimen/space_common_large_only"
        android:paddingTop="@dimen/space_common_mid"
        android:paddingBottom="@dimen/space_common_only"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/entermeeting_load_text" />
    <TextView
        android:id="@+id/tv_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_login"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_switch_meeting"
        android:paddingRight="@dimen/space_common_large_only"
        android:paddingLeft="@dimen/space_common_large_only"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/entermeeting_load_text"
        android:paddingTop="@dimen/space_common_mid"
        android:paddingBottom="@dimen/space_common_only"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>