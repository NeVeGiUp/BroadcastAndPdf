<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_common_mid">
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/upload_marginLeft_small"
        android:background="@color/color_progress"
        android:layout_alignBottom="@id/iv_annotation_image"
        android:layout_marginBottom="@dimen/space_common"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_annotation_image"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/iv_annotation_del"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:layout_alignTop="@id/iv_annotation_image"
        android:layout_alignLeft="@id/iv_annotation_image"
        android:layout_alignBottom="@id/iv_annotation_image"
        android:layout_alignRight="@id/iv_annotation_image"
        android:src="@mipmap/icon_del_n"
        android:background="@color/translucent"
        android:scaleType="center"
        android:visibility="gone"/>
</RelativeLayout>