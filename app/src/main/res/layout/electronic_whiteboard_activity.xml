<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <TextView
            android:id="@+id/whiteboard_oneself_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:drawableTop="@mipmap/but_gerenbb_n"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/activity_horizontal_common"
            android:layout_margin="@dimen/activity_horizontal_common"
            android:textColor="@color/text_black_common"
            android:text="@string/baiban_oneself"
            android:textSize="@dimen/text_common_large_x"/>

        <TextView
            android:id="@+id/whiteboard_mutual_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/but_jiaohubb_n"
            android:drawablePadding="@dimen/activity_horizontal_common"
            android:layout_marginStart="@dimen/space_common_large_xx"
            android:padding="@dimen/comment_upload_marginright"
            android:text="@string/baiban_mutual"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_common_large_x" />
    </LinearLayout>

</RelativeLayout>
