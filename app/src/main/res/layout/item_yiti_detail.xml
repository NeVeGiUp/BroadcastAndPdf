<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_height="@dimen/item_with"
    android:background="@drawable/bg_hyxx_info"
    android:id="@+id/rl_fat"
    android:layout_marginTop="@dimen/dp_10">
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="0dp"
        android:background="@color/color_progress"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/yiti_marginleft"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_upload"
        android:textSize="@dimen/text_common"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/filename_marginleft_mobile"
        android:layout_marginRight="@dimen/filename_marginleft_mobile"
        android:text="sdlfjsf"
        android:layout_toLeftOf="@+id/tv_load"/>
    <TextView
        android:id="@+id/tv_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等待下载"
        android:textSize="@dimen/text_common"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:visibility="gone"/>

</RelativeLayout>