<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_login_editbox">

    <TextView
        android:id="@+id/set_dialog_select_item_text"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/space_common"
        android:textColor="@color/text_gray_deep"
        android:textSize="@dimen/text_common_large" />

    <ImageView
        android:id="@+id/set_dialog_select_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/space_common"
        />
</LinearLayout>