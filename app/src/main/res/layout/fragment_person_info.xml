<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/personal_info_image_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/text_common"
                    android:text="序号"
                    android:textColor="@color/text_gray_deep"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:textSize="@dimen/text_common"
                    android:textColor="@color/text_gray_deep"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_person_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="会议角色"
                    android:textSize="@dimen/text_common"
                    android:textColor="@color/text_gray_deep"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_person_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/sign_person_unit"
                    android:textSize="@dimen/text_common"
                    android:textColor="@color/text_gray_deep"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_person_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="部门"
                    android:textSize="@dimen/text_common"
                    android:textColor="@color/text_gray_deep"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_person_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/sign_person_position"
                    android:textSize="@dimen/text_common"
                    android:textColor="@color/text_gray_deep" />
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_person_info"
        android:layout_marginTop="@dimen/space_common"
        android:paddingBottom="@dimen/space_common_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp" />
</LinearLayout>